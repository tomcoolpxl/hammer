[Unit]
Description=Pyramid Python Application
After=network.target

[Service]
User={{ app_user | default('vagrant') }}
WorkingDirectory=/opt/pyramid_app
Environment="APP_PORT={{ app_port | default(6000) }}"
ExecStart=/usr/bin/python3 /opt/pyramid_app/app.py
Restart=always

[Install]
WantedBy=multi-user.target
