"""HAMMER Generated File Tests.

Assignment: {{ assignment_id }}
Phase: {{ phase }}

Tests that verify file states.
"""

import pytest


{% for test in tests %}
{% for host in test.hosts %}
{% for item in test.file_items %}
@pytest.mark.{{ phase }}
@pytest.mark.weight({{ test.weight }})
def test_file_{{ item.safe_name }}_on_{{ host }}(host_{{ host }}):
    """Verify file {{ item.path }} on {{ host }}."""
    f = host_{{ host }}.file("{{ item.path }}")
{% if item.present %}
    assert f.exists, f"File {{ item.path }} should exist on {{ host }}"
{% if item.mode %}
    assert f.mode == {{ item.mode }}, \
        f"File {{ item.path }} should have mode {{ item.mode }}, got {f.mode}"
{% endif %}
{% if item.owner %}
    assert f.user == "{{ item.owner }}", \
        f"File {{ item.path }} should be owned by {{ item.owner }}, got {f.user}"
{% endif %}
{% if item.group %}
    assert f.group == "{{ item.group }}", \
        f"File {{ item.path }} should have group {{ item.group }}, got {f.group}"
{% endif %}
{% if item.content_regex %}
    assert f.contains("{{ item.content_regex }}"), \
        f"File {{ item.path }} should contain pattern '{{ item.content_regex }}'"
{% endif %}
{% else %}
    assert not f.exists, f"File {{ item.path }} should not exist on {{ host }}"
{% endif %}


{% endfor %}
{% endfor %}
{% endfor %}
