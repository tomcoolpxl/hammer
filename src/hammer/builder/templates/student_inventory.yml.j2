---
# HAMMER Assignment: {{ assignment_id }}
# Student Inventory - Generated by HAMMER

all:
  children:
{% for group_name, hosts in groups.items() %}
    {{ group_name }}:
      hosts:
{% for host in hosts %}
{% if domain %}
        {{ host.name }}.{{ domain }}:
{% else %}
        {{ host.name }}:
{% endif %}
          ansible_host: {{ network.node_ip_map[host.name] }}
          ansible_user: vagrant
          ansible_ssh_private_key_file: .vagrant/machines/{{ host.name }}/libvirt/private_key
{% endfor %}
{% endfor %}
